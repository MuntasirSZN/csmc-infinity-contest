{
  "name": "frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "test": "vitest",
    "test:watch": "bun run test --watch",
    "typecheck": "nuxt typecheck",
    "lint": "bun run lint:oxlint && bun run lint:eslint && bun run lint:stylelint",
    "lint:fix": "bun run lint:oxlint --fix && bun run lint:eslint --fix && bun run lint:stylelint --fix",
    "lint:oxlint": "oxlint --type-aware",
    "lint:eslint": "eslint",
    "lint:stylelint": "stylelint \"./**/*.{css,vue}\"",
    "fmt": "prettier . --write --check",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "postinstall": "bunx --bun simple-git-hooks && nuxt prepare"
  },
  "dependencies": {
    "@iconify-json/line-md": "^1.2.11",
    "@libsql/client": "^0.15.15",
    "@nuxt/image": "1.11.0",
    "@nuxt/ui": "^4.0.1",
    "@nuxtjs/seo": "3.2.2",
    "@pinia/nuxt": "0.11.2",
    "@vueuse/nuxt": "13.9.0",
    "drizzle-orm": "^0.44.6",
    "motion-v": "^1.7.2",
    "nuxt": "^4.1.3",
    "nuxt-security": "2.4.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/format": "^20.0.0",
    "@nuxt/eslint": "1.9.0",
    "@nuxt/test-utils": "^3.19.2",
    "@prettier/plugin-oxc": "^0.0.4",
    "consola": "^3.4.2",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-check-file": "^3.3.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-oxlint": "^1.23.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^20.0.5",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.4",
    "oxlint": "^1.23.0",
    "oxlint-tsgolint": "^0.2.0",
    "playwright-core": "^1.56.1",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "simple-git-hooks": "^2.13.1",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  },
  "simple-git-hooks": {
    "commit-msg": "bunx commitlint --edit $1",
    "pre-commit": "bun lint-staged --config lint-staged.config.ts"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "esbuild",
    "sharp",
    "simple-git-hooks",
    "unrs-resolver",
    "vue-demi"
  ],
  "overrides": {
    "sharp": "0.34.4"
  }
}
