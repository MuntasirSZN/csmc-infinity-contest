{
  "name": "frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "test": "vitest",
    "test:watch": "bun run test --watch",
    "typecheck": "nuxt typecheck",
    "lint": "bun run lint:oxlint && bun run lint:eslint && bun run lint:stylelint",
    "lint:fix": "bun run lint:oxlint --fix && bun run lint:eslint --fix && bun run lint:stylelint --fix",
    "lint:oxlint": "oxlint --type-aware",
    "lint:eslint": "eslint",
    "lint:stylelint": "stylelint \"./**/*.{css,vue}\"",
    "lint:markdownlint": "markdownlint -p .gitignore --fix",
    "fmt": "biome format --fix",
    "postinstall": "bunx --bun simple-git-hooks && nuxt prepare"
  },
  "dependencies": {
    "@iconify-json/line-md": "^1.2.11",
    "@nuxt/image": "1.11.0",
    "@nuxt/scripts": "0.12.1",
    "@nuxt/ui": "^4.0.1",
    "@nuxtjs/seo": "3.2.2",
    "@pinia/nuxt": "0.11.2",
    "@vueuse/nuxt": "13.9.0",
    "motion-v": "^1.7.2",
    "nuxt": "^4.1.2",
    "nuxt-security": "2.4.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/format": "^20.0.0",
    "@nuxt/content": "^3.7.1",
    "@nuxt/eslint": "1.9.0",
    "@nuxt/test-utils": "^3.19.2",
    "better-sqlite3": "^12.4.1",
    "eslint": "^9.37.0",
    "eslint-plugin-check-file": "^3.3.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-oxlint": "^1.19.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^19.0.2",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.3",
    "markdownlint-cli": "^0.45.0",
    "oxlint": "^1.19.0",
    "oxlint-tsgolint": "^0.2.0",
    "playwright-core": "^1.55.1",
    "simple-git-hooks": "^2.13.1",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0"
  },
  "simple-git-hooks": {
    "commit-msg": "bunx commitlint --edit $1",
    "pre-commit": "bun lint-staged --config lint-staged.config.ts"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.13"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "better-sqlite3",
    "esbuild",
    "sharp",
    "simple-git-hooks",
    "unrs-resolver",
    "vue-demi"
  ]
}
